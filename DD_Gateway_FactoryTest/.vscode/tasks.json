{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
 //   "cwd": "${workspaceFolder}",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j8",
            ],
            "group": "build"
        },
        {
            "label": "download",
            "type": "shell",
            "command":"openocd",
            "args": [
                "-f",
                "./config/stlink.cfg",
                "-f",
                "./config/stm32l4x.cfg",
                "-c",
                "program ./build/${workspaceRootFolderName}.hex verify reset exit"
            ],
            "group": "build"
        }
    ]
}